    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "env-cmd": "^10.1.0",
